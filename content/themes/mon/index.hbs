{{!< default}}
<div class="monument">    
    <div class="monument-bar">        
        <i class="ornament left"><i></i><i></i></i>
        
        <div class="wrapper">
            <div class="col-group">
                <div class="slide-header col-mb-52 col-mb-offset-0 col-50 col-offset-1">
                    {{#if @blog.logo}}
                        <a class="logo" href="{{@blog.url}}">
                            <img src="{{@blog.logo}}" alt="Blog Logo" />
                        </a>
                    {{/if}}
                    <h1><a title="{{@blog.title}}" href='{{@blog.url}}'>{{{@blog.title}}}</a></h1>
                    {{#if @blog.description}}
                        <p>{{@blog.description}}</p>
                    {{/if}}
                    <ul class="nav dt">
                        <div class="menu-trigger desktop icon-menu"></div>
                    </ul>
                </div>
            </div>
        </div>
        
        <i class="ornament right"><i></i><i></i></i>
    </div>    
</div>

{{> header}}
<div class="wrapper main-wrapper">
    <main id="grid" class="home">
        
        {{#foreach posts}}
        <article class="article" role="article" itemscope itemtype="http://schema.org/Article" data="{{{url}}}">
            
            <input class="geocomplete" value="{{author.location}}" disabled="disabled">
            <div class="post-cover"></div>
            
            <header class="post-header">
                <div class="arrow-right icon-right-open"></div>
                <div class="hidden-content">
                    {{content words=”0”}}
                </div>
                <p class="post-date">
                    <time class="date" datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">	{{date timeago="true"}}
                    </time>
                </p>
                <h1 class="post-title" itemprop="headline">
                    <a href="{{{url}}}" rel="bookmark">{{title}}</a>
                </h1>
            </header>
            
            <div class="post-content" itemprop="articleBody">
                {{excerpt}}...
            </div>
            
        </article>
        {{/foreach}}
        
    </main>
</div>

{{#if pagination}}
<div class="pagination col-52 col-offset-0">
    <p class="arrow-down icon-down-open" data="{{pageUrl prev}}">Load more posts</p>
</div>
{{/if}}

{{> footer}}